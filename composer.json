{
    "name": "splashphp/core",
    "description": "The Splash framework",
    "keywords": [
        "microframework",
        "splashphp"
    ],
    "homepage": "http://github.com/splashphp/core",
    "license": "MIT",
    "authors": [
        {
            "name": "Prince Darlington",
            "email": "ekeminyd@gmail.com"
        },
        {
            "name": "Obinna John",
            "email": "johnsamuel254@yahoo.com"
        }
    ],
    "require": {
        "php": "^7.2.5",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "splashphp/core": "^1.0",
        "phpmailer/phpmailer": "^6.0",
		"phpunit/phpunit": "3.7.*",
		 "swiftmailer/swiftmailer": "^6.0",
         "vlucas/phpdotenv": "^4.0",
          "monolog/monolog": "^2.0",
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Splash\\": "src/Splash"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
